{
  "name": "Data Scraping",
  "version": "1.0",
  "description": "Build an Extension!",
  "icons": {
    "16": "icon/icon-16.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-64.png",
    "128": "icon/icon-128.png"
  },
  "manifest_version": 2,
  "permissions": ["declarativeContent", "activeTab", "storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon/icon-16.png",
      "32": "icon/icon-32.png",
      "48": "icon/icon-64.png",
      "128": "icon/icon-128.png"
    },
    "default_popup": "popup/index.html",
    "default_title": "Data Scraper ðŸ™‰"
  },
  // "background": {
  //   "scripts": ["background-script.js"]
  // },
  "options_page": "client/index.html",
  "options_ui": {
    "page": "client/index.html",
    "open_in_tab": false
  },
  "web_accessible_resources": ["client/index.html"]
}
